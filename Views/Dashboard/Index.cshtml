@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Sidebar styling */
    #sidebar {
        background-color: #e8f5e9; /* Light garden green */
        color: #2e7d32;
        padding-left: 0; /* Remove padding */
        margin-left: 0; /* Remove margin */
        height: 100vh; /* Full height */
    }

        #sidebar h4 {
            color: #388e3c; /* Primary green for sidebar title */
        }

        #sidebar .nav-link {
            color: #2e7d32;
            font-weight: bold;
        }

            #sidebar .nav-link.active {
                background-color: #a5d6a7;
                color: #1b5e20;
                border-radius: 8px;
            }

    /* Main Content styling */
    .main-content {
        background-color: #f9fbe7; /* Subtle light green */
    }

    /* Card styling */
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
    }

    .card-title {
        color: #388e3c;
    }

    .text-success {
        color: #43a047 !important;
    }

    .text-danger {
        color: #d32f2f !important;
    }

    /* Button and alert styling */
    .alert-info {
        background-color: #c8e6c9;
        color: #2e7d32;
        border-radius: 12px;
    }

    .btn-primary {
        background-color: #66bb6a;
        border: none;
        border-radius: 8px;
        transition: transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #388e3c;
            transform: scale(1.05);
        }

    .btn-outline-secondary {
        color: #66bb6a;
        border-color: #66bb6a;
        transition: transform 0.2s;
    }

        .btn-outline-secondary:hover {
            background-color: #66bb6a;
            color: white;
            transform: scale(1.05);
        }
</style>

<div class="container-fluid main-content  px-0">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
            <div class="position-sticky">
                <h4 class="pt-3 ps-3">TMS</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <span data-feather="home"></span>
                            Dashboards <span class="badge bg-danger">5</span>
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-action="Tickets" asp-controller="Ticket">Tickets</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="CustomerTypes" asp-controller="CustomerType">Customer type</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="customer" asp-controller="Customer">Customers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Roles">Role Management</a></li>


                    <li class="nav-item"><a class="nav-link" asp-action="Create" asp-controller="TicketBooking">Booking</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Academy</a></li>
                    <!-- Additional sidebar items as needed -->
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                <h1 class="h2">Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary">Star</button>
                    </div>
                </div>
            </div>

            <!-- Dashboard Cards -->
            <div class="alert alert-info mb-4">
                <h4>Congratulations John! 🎉</h4>
                <p>You have done 72% more sales today. Check your new badge in your profile.</p>
                <a href="#" class="btn btn-primary">View Badges</a>
            </div>

            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Profit</h5>
                            <h3>$12,628</h3>
                            <p class="text-success">+72.80%</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Sales</h5>
                            <h3>$4,679</h3>
                            <p class="text-success">+28.42%</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Expenses</h5>
                            <h3>$1,230</h3>
                            <p class="text-danger">-5.23%</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">New Users</h5>
                            <h3>512</h3>
                            <p class="text-success">+12.67%</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
 