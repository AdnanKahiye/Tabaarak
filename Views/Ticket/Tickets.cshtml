@{
    ViewData["Title"] = "Basic Tables - Tables";
}

@model IEnumerable<Tickets>

<style>
    /* Card styling */
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        background-color: #f9fbe7; /* Light green background */
    }

    .card-header {
        background-color: #66bb6a; /* Garden green */
        color: white;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .card-header .btn-primary {
        background-color: #388e3c;
        border: none;
        border-radius: 8px;
    }

    .table th {
        color: #388e3c;
        font-weight: bold;
    }

    .table tr {
        transition: background-color 0.2s;
    }

    .table tr:hover {
        background-color: #e8f5e9; /* Light hover effect */
    }

    .btn-warning {
        background-color: #ffb74d;
        border: none;
        color: white;
        border-radius: 8px;
    }

    .btn-warning:hover {
        background-color: #ff9800;
    }

    .btn-danger {
        background-color: #d32f2f;
        border: none;
        color: white;
        border-radius: 8px;
    }

    .btn-danger:hover {
        background-color: #c62828;
    }
</style>

<div class="card shadow-sm p-3">
    <h5 class="card-header d-flex justify-content-between align-items-center">
        Ticket List
        <a asp-controller="Ticket" asp-action="Add" class="btn btn-primary px-4">Add New Ticket</a>
    </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.TicketName</td>
                        <td>@ticket.TicketAmount.ToString("C")</td>
                        <td>@ticket.TicketDescription</td>
                        <td>
                            <a asp-controller="Ticket" asp-action="Edit" asp-route-id="@ticket.TicketId" class="btn btn-warning btn-sm me-1">Edit</a>
                            <a asp-controller="Ticket" asp-action="Delete" asp-route-id="@ticket.TicketId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
