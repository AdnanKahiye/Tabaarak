@model TicketModel

<style>
    .delete-container {
        background-color: #f9fbe7; /* Light green background for garden theme */
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        color: #d32f2f; /* Red for delete warning */
        font-weight: bold;
    }

    h4 {
        color: #388e3c; /* Garden green for ticket name */
        font-weight: bold;
    }

    .btn-danger {
        background-color: #e57373;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: bold;
        color: white;
        transition: background-color 0.2s, transform 0.2s;
    }

        .btn-danger:hover {
            background-color: #d32f2f;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #8bc34a;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.2s, transform 0.2s;
    }

        .btn-secondary:hover {
            background-color: #689f38;
            transform: scale(1.05);
        }

    .button-group {
        margin-top: 20px;
    }
</style>

<div class="container mt-5">
    <div class="delete-container">
        <h2>Delete Ticket</h2>
        <p>Are you sure you want to delete this ticket?</p>

        <div>
            <h4>@Model.TicketName</h4>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="button-group d-flex justify-content-center">
                <button type="submit" class="btn btn-danger me-3">
                    <i class="fas fa-trash-alt me-2"></i> Yes
                </button>
                <a asp-action="Tickets" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> No
                </a>
            </div>
        </form>
    </div>
</div>
