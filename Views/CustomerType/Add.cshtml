@{
    ViewData["Title"] = "Customer Type Form";
}

@model CustomerType

<style>
    .card {
        background-color: #f9fbe7; /* Soft green for a nature-inspired look */
        border: none;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    h3.text-center {
        color: #388e3c; /* Garden green title */
        font-weight: bold;
    }

    .form-label {
        font-weight: bold;
        color: #388e3c; /* Consistent green for labels */
    }

    .form-control {
        border: 2px solid #66bb6a;
        border-radius: 50px;
        padding: 10px 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border-color: #388e3c;
            box-shadow: 0 4px 8px rgba(56, 142, 60, 0.3);
        }

    .text-danger {
        color: #d32f2f;
        font-size: 0.9em;
    }

    .btn-primary, .btn-secondary {
        border-radius: 50px;
        padding: 12px 0;
        font-weight: bold;
        color: white;
        width: 100%;
        box-shadow: 0 4px 8px rgba(102, 187, 106, 0.4);
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.2s;
    }

    .btn-primary {
        background-color: #66bb6a;
        border: none;
    }

        .btn-primary:hover {
            background-color: #388e3c;
            transform: scale(1.02);
            box-shadow: 0 6px 12px rgba(56, 142, 60, 0.5);
        }

    .btn-secondary {
        background-color: #8bc34a;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #689f38;
            transform: scale(1.02);
            box-shadow: 0 6px 12px rgba(104, 159, 56, 0.5);
        }
</style>



<div class="container-fluid mt-5 px-0">
    <div class="card shadow-lg p-5 rounded-lg border-0 mx-3">
        <h3 class="text-center mb-4"><i class="fas fa-user-tag me-2"></i> New Customer Type</h3>
        <hr class="mb-4">

        <form method="post" asp-action="Add" asp-controller="CustomerType">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Customer Type Details Section -->
            <div class="mt-4">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="Customtype" class="form-label"></label>
                        <input type="text" asp-for="Customtype" class="form-control" placeholder="Enter customer type name">
                        <span asp-validation-for="Customtype" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label asp-for="CustomDescription" class="form-label"></label>
                        <input asp-for="CustomDescription" type="text" class="form-control" placeholder="Enter description">
                        <span asp-validation-for="CustomDescription" class="text-danger"></span>
                    </div>
                </div>

                <!-- Submit and Back to List Buttons -->
                <div class="row mt-5">
                    <div class="col-md-6 text-center">
                        <button type="submit" class="btn btn-success w-100 py-2 rounded-pill shadow-sm hover-effect">
                            <i class="fas fa-paper-plane me-2"></i> Submit
                        </button>
                    </div>
                    <div class="col-md-6 text-center">
                        <a asp-controller="CustomerType" asp-action="CustomerTypes" class="btn btn-warning w-100 py-2 rounded-pill shadow-sm hover-effect">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
