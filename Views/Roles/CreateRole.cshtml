@model string

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center text-success mb-4">Create Role</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }

        <form asp-action="CreateRole" method="post">
            <div class="form-group mb-3">
                <label for="roleName" class="form-label">Role Name</label>
                <input type="text" name="roleName" class="form-control" placeholder="Enter role name" required />
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary me-3 px-4">
                    <i class="fas fa-plus-circle me-2"></i> Create Role
                </button>
                <a asp-action="Index" class="btn btn-success px-4">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .container {
        max-width: 500px;
    }

    .card {
        border-radius: 10px;
        background-color: #f9fbe7; /* Soft green for a nature-inspired look */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h2.text-center {
        font-weight: bold;
        color: #388e3c; /* Garden green title */
    }

    .form-label {
        font-weight: bold;
        color: #388e3c;
    }

    .form-control {
        border-radius: 0.375rem;
        box-shadow: none;
        border: 2px solid #66bb6a;
        padding: 10px;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border-color: #388e3c;
            box-shadow: 0 4px 8px rgba(56, 142, 60, 0.3);
        }

    .btn-primary, .btn-success {
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 20px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .btn-success:hover {
            background-color: #388e3c;
            transform: scale(1.05);
        }

    .alert-danger {
        color: #d32f2f;
        font-size: 0.875em;
    }
</style>
