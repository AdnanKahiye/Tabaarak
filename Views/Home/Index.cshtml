<style>
    /* General Styles */
    body, h1, h2, h3, p, ul, li, a {
        font-family: Arial, sans-serif;
    }

    /* Garden-Themed Color Scheme */
    .bg-primary {
        background-color: #66bb6a !important; /* Garden green */
    }

    .bg-secondary {
        background-color: #c8e6c9 !important; /* Light green */
    }

    .text-primary {
        color: #388e3c !important; /* Dark garden green */
    }

    .btn-primary {
        background-color: #43a047;
        color: white;
        border: none;
        border-radius: 8px;
        transition: transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #2e7d32;
            transform: scale(1.05);
        }

    .btn-dark {
        background-color: #2e7d32;
        color: white;
        border: none;
    }

    /* Card Styling */
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        overflow: hidden;
    }

    .card-title {
        color: #388e3c; /* Primary garden green for titles */
    }

    .text-light {
        color: #f9fbe7 !important; /* Very light green for contrast */
    }

    /* Section Headers */
    h1, h2 {
        color: #2e7d32;
    }

    /* Container Spacing */
    .container {
        max-width: 1200px;
        margin: auto;
    }

    /* Shadows */
    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Newsletter Input */
    .news-input input {
        border-radius: 8px 0 0 8px;
        border: 1px solid #43a047;
    }

    .news-input .btn-dark {
        border-radius: 0 8px 8px 0;
    }
</style>

